rules_version = '2';

/**
 * Firebase Storage Security Rules
 * Controls access to uploaded files
 */

service firebase.storage {
  match /b/{bucket}/o {
    
    // ============================================
    // HELPER FUNCTIONS
    // ============================================
    
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isValidImage() {
      return request.resource.contentType.matches('image/.*') &&
        request.resource.size < 10 * 1024 * 1024; // 10MB max
    }
    
    function isValidDocument() {
      return request.resource.contentType.matches('application/pdf') &&
        request.resource.size < 25 * 1024 * 1024; // 25MB max
    }
    
    function isValidVideo() {
      return request.resource.contentType.matches('video/.*') &&
        request.resource.size < 100 * 1024 * 1024; // 100MB max
    }
    
    // ============================================
    // PROPERTY IMAGES
    // ============================================
    match /properties/{propertyId}/{allPaths=**} {
      // Anyone can read property images
      allow read: if true;
      
      // Only authenticated users can upload
      allow write: if isAuthenticated() && isValidImage();
      
      // Allow delete by owner (via backend)
      allow delete: if isAuthenticated();
    }
    
    // ============================================
    // USER AVATARS
    // ============================================
    match /avatars/{userId}/{allPaths=**} {
      // Anyone can read avatars
      allow read: if true;
      
      // Users can only upload their own avatar
      allow write: if isOwner(userId) && isValidImage();
      
      // Users can delete their own avatar
      allow delete: if isOwner(userId);
    }
    
    // ============================================
    // PROPERTY DOCUMENTS (Legal papers, etc.)
    // ============================================
    match /documents/{userId}/{allPaths=**} {
      // Only owner and admins can read
      allow read: if isOwner(userId);
      
      // Owners can upload documents
      allow write: if isOwner(userId) && (isValidDocument() || isValidImage());
      
      // Owners can delete
      allow delete: if isOwner(userId);
    }
    
    // ============================================
    // KYC DOCUMENTS
    // ============================================
    match /kyc/{userId}/{allPaths=**} {
      // Only owner can read KYC (admin via backend)
      allow read: if isOwner(userId);
      
      // Owners can upload KYC documents
      allow write: if isOwner(userId) && (isValidDocument() || isValidImage());
      
      // No public deletion
      allow delete: if false;
    }
    
    // ============================================
    // CHAT ATTACHMENTS
    // ============================================
    match /chat/{conversationId}/{allPaths=**} {
      // Authenticated users can read
      allow read: if isAuthenticated();
      
      // Authenticated users can upload
      allow write: if isAuthenticated() && 
        (isValidImage() || isValidDocument());
      
      // No deletion (for message history)
      allow delete: if false;
    }
    
    // ============================================
    // PARTNER DOCUMENTS
    // ============================================
    match /partners/{userId}/{allPaths=**} {
      // Only owner can read
      allow read: if isOwner(userId);
      
      // Partners can upload documents
      allow write: if isOwner(userId) && (isValidDocument() || isValidImage());
      
      // Only owner can delete
      allow delete: if isOwner(userId);
    }
    
    // ============================================
    // PROPERTY VIDEOS
    // ============================================
    match /videos/{propertyId}/{allPaths=**} {
      // Anyone can view property videos
      allow read: if true;
      
      // Authenticated users can upload
      allow write: if isAuthenticated() && isValidVideo();
      
      // Allow delete by authenticated users (ownership via backend)
      allow delete: if isAuthenticated();
    }
    
    // ============================================
    // TEMP UPLOADS (short-lived)
    // ============================================
    match /temp/{userId}/{allPaths=**} {
      // Only owner can access temp files
      allow read: if isOwner(userId);
      allow write: if isOwner(userId);
      allow delete: if isOwner(userId);
    }
    
    // ============================================
    // PUBLIC ASSETS
    // ============================================
    match /public/{allPaths=**} {
      // Anyone can read public assets
      allow read: if true;
      
      // No public writes
      allow write, delete: if false;
    }
  }
}
